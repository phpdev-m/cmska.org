<section class="article full">
    <header class="article_top">
        <h1>{post:title}</h1>
    </header>

    <article class="text">{post:full_post}</article>
    <div class="attr_panel">
        <div class="categ">
            <a rel="chapter" title="{categ:name}" href="{categ:url}">{categ:name}</a>
        </div>
        <div class="taglist">
            {taglist}
        </div>
    </div>
</section>